#! /usr/bin/env bash

if [ -v USE_DPI ]
then
    pliLib=""
else
    pliLib="-pli_lib $DV_ROOT/tools/Linux/x86_64/lib/libdsimpli.so +acc+rwb"
fi

dsim -work $MODEL_DIR/dsim_work -timescale 1ps/1ps +incdir+$UVM_HOME/src $UVM_HOME/src/uvm_pkg.sv -f flist $pliLib +nospecify -top cmp_top -linebuf -l compile.log -genimage image -sv -allow-int-enum-assign -warn DefNetNone +define+UVM_DIRECTC_OPTS
