#! /usr/bin/env bash

if [ -v USE_DPI ]
then
    pliLib="-sv_lib $DV_ROOT/tools/Linux/x86_64/lib/libdsimdpi.so"
else
    pliLib="-pli_lib $DV_ROOT/tools/Linux/x86_64/lib/libdsimpli.so +acc+rwb"
fi

## DSim run phase
myName=${0##*/};
echo -n "[$myName]"
set -o xtrace
dsim -image image -sv_lib $UVM_HOME/src/dpi/libuvm_dpi.so $pliLib $@
